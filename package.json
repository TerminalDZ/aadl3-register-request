  "homepage": "https://github.com/bilobom/aadl3-register-app",
  "name": "aadl3",
  "version": "1.0.0",
  "packageManager": "yarn@1.22.19",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish=never"
  },
  "dependencies": {
    "play-sound": "^1.1.6"
